<!DOCTYPE html>
<html lang="en">

    {{ html_head | raw }}
<style>
.card-register {
{#    background-color: #FF8F5E;#}
    border-radius: 8px;
    {#color: #fff;#}
    max-width: 700px;
    margin: 120px 0 70px;
    min-height: 400px;
    padding: 30px;
    z-index: 1;
}
</style>
    <body class="">
        <div class="wrapper ">
            <div class="main-panel">
                <!-- Navbar -->
                {{ page_main_navbar | raw}}
                <!-- End Navbar -->
                <!-- <div class="panel-header panel-header-sm">


          </div> -->
                <div class="content">
                    
                    <div class="card card-register">
                    <h1>{{ login_heading }}</h1>
                    <p>{{ login_subheading }}</p>

                    {{ form_open("esciauth/login") }}

                    <div class="px-1">
                        <fieldset>
                            <label class="block clearfix">
                                {{ login_identity_label }}
                                <span class="block input-icon input-icon-right">
                                    <i class="nc-icon nc-single-02"></i>
                                    {{ form_input_identity | raw }}

                                </span>
                            </label>
                        </fieldset>
                    </div>
                    <div class="px-1">
                        <fieldset>
                            <label class="block clearfix">
                                {{ login_password_label }}
                                <span class="block input-icon input-icon-right">
                                    <i class="nc-icon nc-key-25"></i>
                                    {{ form_input_password | raw }}
                                </span>
                            </label>
                        </fieldset>
                        <div class="block clearfix">
                            {{ html_form_submit | raw }}
                        </div>
                        <div>
                            <i class="fa fa-google-plus"></i> {{ anchor_google_login | raw}}
                        </div>



                        {#<div class="space-4"></div>#}

                    </div>
                    {{ form_close() }}
                    
                    
                    
                    
                    
                    
                    
                    </div>
                    
                    
                    

                </div>
                {{ page_footer | raw }}
            </div>
        </div>
        {{ pg_js_bottom | raw }}
    </body>

</html>